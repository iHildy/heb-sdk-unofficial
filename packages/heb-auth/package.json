{
  "name": "heb-auth-unofficial",
  "version": "0.1.1",
  "description": "HEB mobile OAuth helpers (PKCE + token exchange)",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean --tsconfig tsconfig.build.json",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "heb",
    "oauth",
    "pkce",
    "auth"
  ],
  "author": {
    "name": "Ian Hildebrand"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ihildy/heb-sdk-unofficial.git",
    "directory": "packages/heb-auth"
  },
  "homepage": "https://github.com/ihildy/heb-sdk-unofficial/tree/main/packages/heb-auth",
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@types/node": "^25.0.6",
    "tsup": "^8.5.1",
    "typescript": "5.7.3"
  }
}
