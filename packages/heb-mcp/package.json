{
  "name": "heb-mcp",
  "version": "0.1.0",
  "description": "MCP server for H-E-B grocery API",
  "private": true,
  "type": "module",
  "main": "./dist/server.js",
  "bin": {
    "heb-mcp": "./dist/server.js"
  },
  "scripts": {
    "build": "pnpm build:web && tsc",
    "build:web": "cd web && pnpm build",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit && cd web && pnpm typecheck"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "express": "^4.21.0",
    "heb-auth": "workspace:*",
    "heb-client": "workspace:*",
    "jose": "^5.9.0",
    "zod": "3.24.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.0.0",
    "autoprefixer": "^10.4.23",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.19.0",
    "typescript": "5.7.3"
  },
  "engines": {
    "node": ">=18"
  }
}
